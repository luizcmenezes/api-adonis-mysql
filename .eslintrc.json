{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "globals": {
    "use": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "off",
    "camelcase": "off"
  }
}
